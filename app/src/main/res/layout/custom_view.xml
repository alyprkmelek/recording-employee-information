<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewCustomView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/nameTextViewCustomView"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="username"
        android:textAlignment="textStart"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/surnameTextViewCustomView"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="usersurname"
        android:textAlignment="textStart"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ageTextViewCustomView"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="userage"
        android:textAlignment="textStart"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/jobTextViewCustomView"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="userposition"
        android:textAlignment="textStart"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/userEmailTextViewCustomView"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="useremail"
        android:textAlignment="textStart"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:onClick="delete"
        android:text="Çalışanı Sil" />
</LinearLayout>